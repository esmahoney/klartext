# =============================================================================
# KlarText Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Provider Configuration
# Set the provider you want to use and its corresponding API key
# Supported: openai, azure, groq, google
# -----------------------------------------------------------------------------
LLM_PROVIDER=groq

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Azure OpenAI
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Groq
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-70b-versatile

# Google Generative AI (Gemini)
GOOGLE_API_KEY=
GOOGLE_MODEL=gemini-1.5-flash

# -----------------------------------------------------------------------------
# TTS Provider Configuration
# Supported: openai, google, azure, elevenlabs
# -----------------------------------------------------------------------------
TTS_PROVIDER=openai

# OpenAI TTS (uses OPENAI_API_KEY above)
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy

# Google Cloud TTS
GOOGLE_TTS_API_KEY=

# ElevenLabs
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000

# Rate limiting (requests per minute per IP)
RATE_LIMIT_RPM=30

# Maximum text length (characters) before chunking
MAX_TEXT_LENGTH=40000

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Optional: Redis (for production rate limiting / caching)
# -----------------------------------------------------------------------------
# REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Optional: Postgres (for logging / metrics)
# -----------------------------------------------------------------------------
# DATABASE_URL=postgresql://user:pass@localhost:5432/klartext
